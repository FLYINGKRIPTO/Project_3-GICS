<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.androquiz.layoutQuestions">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundbb"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/layout_quiz"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/marginTopHeading"
            android:textSize="@dimen/TextSizeLarge"
            android:fontFamily="@font/jokerman"

            />
        <android.support.v7.widget.CardView
            android:layout_width="@dimen/MarginTopLArge"
            android:layout_height="@dimen/imageHeight"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/CardMarginTop"
            app:cardCornerRadius="@dimen/TextSizeMedium"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/group1rect"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/HeadingPaddingTop"
                android:textSize="@dimen/TextSizesmall"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/HeadingPaddingTop"
                android:text="@string/q1_select_a_mandatory_attribute_for_any_view_inside_of_a_container_layout"
                />

                <CheckBox
                    android:id="@+id/q1o1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/HeadingPaddingTop"
                    android:layout_marginTop="@dimen/seventy"
                    android:text="@string/layout_width"
                    android:textColor="@color/white"
                    android:paddingLeft="@dimen/fab_margin"
                    />
                <CheckBox

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/HeadingPaddingTop"
                    android:layout_marginTop="@dimen/nin_five"
                    android:text="@string/layout_marginstart"
                    android:textColor="@color/white"
                    android:paddingLeft="@dimen/fab_margin"
                    />
                <CheckBox
                    android:id="@+id/q1o3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/HeadingPaddingTop"
                    android:layout_marginTop="@dimen/mmnnmj"
                    android:text="@string/layout_height"
                    android:textColor="@color/white"
                    android:paddingLeft="@dimen/fab_margin"
                    />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/HeadingPaddingTop"
                    android:layout_marginTop="@dimen/mttp"
                    android:text="@string/textcolor"
                    android:textColor="@color/white"
                    android:paddingLeft="@dimen/fab_margin"
                    />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/MarginTopLArge"
            android:layout_height="@dimen/cardHeight"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/mmtop"
            app:cardCornerRadius="@dimen/cornerRadius"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/group2rect"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/HeadingPaddingTop"
                android:textSize="@dimen/TextSizesmall"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/HeadingPaddingTop"
                android:text="@string/q2_layout"
                />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/HeadingPaddingTop"
                    android:textColor="@color/white"
                    android:layout_marginTop="90dp"
                    android:text="@string/textbox"
                    android:paddingStart="@dimen/fab_margin"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/HeadingPaddingTop"
                    android:layout_marginTop="-10dp"
                    android:text="@string/textview"
                    android:textColor="@color/white"
                    android:paddingStart="@dimen/fab_margin"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/HeadingPaddingTop"
                    android:layout_marginTop="-10dp"
                    android:text="@string/edittext"
                    android:textColor="@color/white"
                    android:paddingStart="@dimen/fab_margin"
                    />
                <RadioButton
                    android:id="@+id/q204"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/HeadingPaddingTop"
                    android:layout_marginTop="-10dp"
                    android:text="@string/both_b_and_c"
                    android:textColor="@color/white"
                    android:paddingStart="@dimen/fab_margin"
                    />
            </RadioGroup>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/MarginTopLArge"
            android:layout_height="@dimen/cardHeight"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/mmmtp"
            app:cardCornerRadius="@dimen/cornerRadius"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/group3rect"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/HeadingPaddingTop"
                android:textSize="@dimen/TextSizesmall"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/HeadingPaddingTop"
                android:text="@string/q3_what_is_an_activity"
                />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RadioButton
                    android:id="@+id/q3o1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/HeadingPaddingTop"
                    android:layout_marginTop="@dimen/fifty"
                    android:textColor="@color/white"
                    android:text="@string/q3_layout"
                    android:paddingStart="@dimen/fab_margin"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/HeadingPaddingTop"
                    android:layout_marginTop="-2dp"
                    android:textColor="@color/white"
                    android:text="@string/option"
                    android:paddingStart="@dimen/fab_margin"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/HeadingPaddingTop"
                    android:layout_marginTop="-2dp"
                    android:textColor="@color/white"
                    android:text="@string/option2"
                    android:paddingStart="@dimen/fab_margin"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/HeadingPaddingTop"
                    android:layout_marginTop="-2dp"
                    android:textColor="@color/white"
                    android:text="@string/option4"
                    android:paddingStart="@dimen/fab_margin"
                    />
            </RadioGroup>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/MarginTopLArge"
            android:layout_height="@dimen/cardHeight"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/mmt"
            app:cardCornerRadius="@dimen/cornerRadius"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/group4rect"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/HeadingPaddingTop"
                android:textSize="@dimen/TextSizesmall"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/HeadingPaddingTop"
                android:text="Q4. Context referring to the application environment "
                />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/HeadingPaddingTop"
                    android:layout_marginTop="65dp"
                    android:textColor="@color/white"
                    android:text="@string/op1"
                    android:paddingStart="@dimen/fab_margin"
                    />
                <RadioButton
                    android:id="@+id/q4o2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/HeadingPaddingTop"
                    android:layout_marginTop="-5dp"
                    android:textColor="@color/white"
                    android:text="@string/op2"
                    android:paddingStart="@dimen/fab_margin"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/HeadingPaddingTop"
                    android:layout_marginTop="-5dp"
                    android:text="@string/op33"
                    android:paddingStart="@dimen/fab_margin"
                    android:textColor="@color/white"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/HeadingPaddingTop"
                    android:layout_marginTop="-5dp"
                    android:textColor="@color/white"
                    android:text="@string/op4"
                    android:paddingStart="@dimen/fab_margin"
                    />
            </RadioGroup>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/MarginTopLArge"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="930dp"
            app:cardCornerRadius="@dimen/cornerRadius"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/group5rect"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/HeadingPaddingTop"
                android:textSize="@dimen/TextSizesmall"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/HeadingPaddingTop"
                android:text="@string/layout_q5"
                />
            <EditText
                android:id="@+id/q5o4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="54dp"
                android:textSize="@dimen/TextSizesmall"
                android:textStyle="bold"
                android:ems="4"
                android:textColor="@color/white"
                android:layout_marginStart="90dp"
                />
        </android.support.v7.widget.CardView>

        <Button
            android:paddingLeft="@dimen/marginTopHeading"
            android:paddingRight="@dimen/marginTopHeading"
            android:paddingTop="@dimen/imageMarginTop"
            android:paddingBottom="@dimen/imageMarginTop"
            android:id="@+id/submit_button"
            android:layout_width="@dimen/cardMarginTop"
            android:layout_height="@dimen/seventy"
            android:layout_marginTop="@dimen/cardFiveMarginTop"
            android:layout_marginBottom="@dimen/cornerRadius"
            android:layout_centerHorizontal="true"
            android:text="@string/submit"
            android:textStyle="normal"
            android:textSize="@dimen/TextSizeMedium"
            android:onClick="onSubmitone"
            android:textColor="@color/white"
            android:fontFamily="@font/jokerman"
            android:background="@drawable/group4"/>

    </RelativeLayout>


</ScrollView>
